<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/change_password_old_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Aktif Şifre"
        android:inputType="textPassword"
        android:maxLength="50"></EditText>
    <EditText
        android:id="@+id/change_password_new_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Yeni Şifre"
        android:inputType="textPassword"
        android:maxLength="50"></EditText>
    <EditText
        android:id="@+id/change_password_new_pass_again"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Yeni Şifre Tekrar"
        android:inputType="textPassword"
        android:maxLength="50"></EditText>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <Button
           android:id="@+id/change_password_update"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Güncelle"
           android:layout_weight="1"
           android:textAllCaps="false"
           android:layout_gravity="center"
           android:layout_marginTop="5dp"
           android:textColor="#FFFFFF"
           android:textSize="20sp"
           android:layout_marginStart="5dp"
           android:layout_marginBottom="5dp"
           android:layout_marginEnd="5dp"
           android:background="@color/colorAccent"></Button>
       <Button
           android:id="@+id/change_password_close"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Kapat"
           android:layout_weight="1"
           android:layout_marginStart="5dp"
           android:textAllCaps="false"
           android:layout_gravity="center"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:layout_marginEnd="5dp"
           android:textColor="#FFFFFF"
           android:textSize="20sp"
           android:background="@color/colorAccent"></Button>
   </LinearLayout>


</LinearLayout>